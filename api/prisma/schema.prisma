generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())                  @map("created_at")
  updatedAt       DateTime        @updatedAt                       @map("updated_at")
  email           String          @unique
  password        String

  @@map("users")
}

model Ingredient {
  id                Int                @id                              @default(autoincrement())
  createdAt         DateTime           @default(now())                  @map("created_at")
  updatedAt         DateTime           @updatedAt                       @map("updated_at")
  name              String             @unique

  @@map("ingredients")
}

model Recipe {
  id              Int                   @id @default(autoincrement())
  createdAt         DateTime            @default(now())                  @map("created_at")
  updatedAt         DateTime            @updatedAt                       @map("updated_at")
  name              String              @unique 
  instructions      String

  @@map("recipes")
}

model RecipeIngredient {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())                  @map("created_at")
  updatedAt       DateTime        @updatedAt                       @map("updated_at")
  recipeId        Int
  ingredientId    Int
  quantity        Int
  unit            String

  @@map("recipe_ingredients")
}

model UserRecipe {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())                  @map("created_at")
  updatedAt       DateTime        @updatedAt                       @map("updated_at")
  userId          Int
  recipeId        Int
  // To be expanded later to include notes, ratings, etc.

  @@map("user_recipes")
}

model RequestCache {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())                  @map("created_at")
  updatedAt       DateTime        @updatedAt                       @map("updated_at")
  url             String
  method          String
  headers         Json?
  body            Json?

  @@map("request_cache")
}

model ResponseCache {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())                  @map("created_at")
  updatedAt       DateTime        @updatedAt                       @map("updated_at")
  statusCode      Int             @map("status_code")
  headers         Json?
  body            Json?

  @@map("response_cache")
}

model RequestResponseCache {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())                  @map("created_at")
  updatedAt       DateTime        @updatedAt                       @map("updated_at")
  requestId       Int
  responseId      Int

  @@map("request_response_cache")
}

model DietaryRestriction {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())                  @map("created_at")
  updatedAt       DateTime        @updatedAt                       @map("updated_at")
  name            String          @unique
  displayName     String          @map("display_name")

  @@map("dietary_restrictions")
}

model UsersDietaryResctrictions {
  id                    Int             @id @default(autoincrement())
  createdAt             DateTime        @default(now())                  @map("created_at")
  updatedAt             DateTime        @updatedAt                       @map("updated_at")
  userId                Int                                              @map("user_id")
  dietaryRestrictionId  Int                                              @map("dietary_restriction_id")

  @@map("users_dietary_restrictions")
}