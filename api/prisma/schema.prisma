generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())                  @map("created_at")
  updatedAt       DateTime        @updatedAt                       @map("updated_at")
  email           String          @unique
  password        String

  @@map("users")
}

// ----------------------------------------------------------------- //
// Basic building blocks of a recipe
// ----------------------------------------------------------------- //
model Recipe {
  id              Int                   @id @default(autoincrement())
  createdAt         DateTime            @default(now())                  @map("created_at")
  updatedAt         DateTime            @updatedAt                       @map("updated_at")
  name              String               
  instructions      String

  @@map("recipes")
}

// ----------------------------------------------------------------- //
// Recipe Filters/Metadata
// ----------------------------------------------------------------- //
model Ingredient {
  id                Int                @id                              @default(autoincrement())
  createdAt         DateTime           @default(now())                  @map("created_at")
  updatedAt         DateTime           @updatedAt                       @map("updated_at")
  name              String             @unique
  displayName       String             @map("display_name")

  @@map("ingredients")
}

model RecipeIngredient {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())                  @map("created_at")
  updatedAt       DateTime        @updatedAt                       @map("updated_at")
  recipeId        Int
  ingredientId    Int
  quantity        Float
  unit            String

  @@map("recipe_ingredients")
}

model Allergen {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())                  @map("created_at")
  updatedAt       DateTime        @updatedAt                       @map("updated_at")
  name            String          @unique
  displayName     String          @map("display_name")

  @@map("allergens")
}

model RecipeAllergen {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())                  @map("created_at")
  updatedAt       DateTime        @updatedAt                       @map("updated_at")
  recipeId        Int                                              @map("recipe_id") 
  allergenId      Int                                              @map("allergen_id")

  @@map("recipe_allergens")
}

model Diet {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())                  @map("created_at")
  updatedAt       DateTime        @updatedAt                       @map("updated_at")
  name            String          @unique
  displayName     String          @map("display_name")

  @@map("diets")
}

model RecipeDiet {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())                  @map("created_at")
  updatedAt       DateTime        @updatedAt                       @map("updated_at")
  recipeId        Int                                              @map("recipe_id") 
  dietId          Int                                              @map("diet_id")

  @@map("recipe_diets")
}

// ----------------------------------------------------------------- //
// These models are used to cache requests made to external systems
// ----------------------------------------------------------------- //
model RequestCache {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())                  @map("created_at")
  updatedAt       DateTime        @updatedAt                       @map("updated_at")
  url             String
  method          String
  headers         Json?
  body            Json?

  @@map("request_cache")
}

model ResponseCache {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())                  @map("created_at")
  updatedAt       DateTime        @updatedAt                       @map("updated_at")
  statusCode      Int             @map("status_code")
  headers         Json?
  body            Json?

  @@map("response_cache")
}

model RequestResponseCache {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())                  @map("created_at")
  updatedAt       DateTime        @updatedAt                       @map("updated_at")
  requestId       Int
  responseId      Int

  @@map("request_response_cache")
}

// ----------------------------------------------------------------- //
// Used to track dietary restrictions related to user preferences
// ----------------------------------------------------------------- //

model UsersIngredients {
  id                    Int             @id @default(autoincrement())
  createdAt             DateTime        @default(now())                  @map("created_at")
  updatedAt             DateTime        @updatedAt                       @map("updated_at")
  userId                Int                                              @map("user_id")
  ingredientId          Int                                              @map("ingredient_id")

  @@map("user_ingredients")
  @@unique([userId, ingredientId])
}

model UsersAllergens {
  id                    Int             @id @default(autoincrement())
  createdAt             DateTime        @default(now())                  @map("created_at")
  updatedAt             DateTime        @updatedAt                       @map("updated_at")
  userId                Int                                              @map("user_id")
  allergenId            Int                                              @map("allergen_id")

  @@map("user_allergens")
  @@unique([userId, allergenId])
}

model UsersDiets {
  id                    Int             @id @default(autoincrement())
  createdAt             DateTime        @default(now())                  @map("created_at")
  updatedAt             DateTime        @updatedAt                       @map("updated_at")
  userId                Int                                              @map("user_id")
  dietId                Int                                              @map("diet_id")

  @@map("user_diets")
  @@unique([userId, dietId])
}

model UsersFavorites {
  id                    Int             @id @default(autoincrement())
  createdAt             DateTime        @default(now())                  @map("created_at")
  updatedAt             DateTime        @updatedAt                       @map("updated_at")
  userId                Int                                              @map("user_id")
  recipeId              Int                                              @map("recipe_id")

  @@map("user_favorites")
  @@unique([userId, recipeId])
}

// ----------------------------------------------------------------- //
// Associates users to recipes. Used for history and favorites.
// ----------------------------------------------------------------- //
model UserRecipe {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())                  @map("created_at")
  updatedAt       DateTime        @updatedAt                       @map("updated_at")
  userId          Int                                              @map("user_id")
  recipeId        Int                                              @map("recipe_id")

  @@map("user_recipes")
  @@unique([userId, recipeId])
}