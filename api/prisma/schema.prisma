generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())                  @map("created_at")
  updatedAt       DateTime        @updatedAt                       @map("updated_at")
  email           String          @unique
  password        String

  @@map("users")
}

model Ingredient {
  id                Int                @id                              @default(autoincrement())
  createdAt         DateTime           @default(now())                  @map("created_at")
  updatedAt         DateTime           @updatedAt                       @map("updated_at")
  name              String             @unique

  @@map("ingredients")
}

model Recipe {
  id              Int                   @id @default(autoincrement())
  createdAt         DateTime            @default(now())                  @map("created_at")
  updatedAt         DateTime            @updatedAt                       @map("updated_at")
  name              String              @unique 
  instructions      String

  @@map("recipes")
}

model RecipeIngredient {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())                  @map("created_at")
  updatedAt       DateTime        @updatedAt                       @map("updated_at")
  recipeId        Int
  ingredientId    Int
  quantity        Int
  unit            String

  @@map("recipe_ingredients")
}

model UserRecipe {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())                  @map("created_at")
  updatedAt       DateTime        @updatedAt                       @map("updated_at")
  userId          Int
  recipeId        Int
  // To be expanded later to include notes, ratings, etc.

  @@map("user_recipes")
}